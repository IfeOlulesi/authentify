{
  "name": "authentify",
  "version": "1.0.0",
  "description": "A hands-on tour of user authentication methods in Node.js + TypeScript",
  "scripts": {
    "01:basic-auth": "nodemon --exec ts-node 01-basic-auth/server.ts",
    "02:session-auth": "nodemon --exec ts-node 02-session-auth/server.ts",
    "03:token-auth": "nodemon --exec ts-node 03-token-auth/server.ts",
    "04:jwt-auth": "nodemon --exec ts-node 04-jwt-auth/server.ts",
    "05:oauth-idp": "nodemon --exec ts-node 05-oauth/idp-server.ts",
    "05:oauth-client": "nodemon --exec ts-node 05-oauth/client-server.ts",
    "06:sso-idp": "nodemon --exec ts-node 06-sso/idp-server.ts",
    "06:sso-app1": "nodemon --exec ts-node 06-sso/app1-server.ts",
    "06:sso-app2": "nodemon --exec ts-node 06-sso/app2-server.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-redis": "^7.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.0",
    "@types/uuid": "^9.0.8",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
